<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">


            <gradient
                    android:startColor="#FF660000"
                    android:endColor="#FF660000"
                    android:type="linear"
                    android:angle="90"/>

            <padding android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp"/>
            <corners android:radius="20dp"/>
        </shape>

    </item>

    <item>

        <shape android:shape="rectangle">


            <gradient
                    android:startColor="#aa0000"
                    android:centerColor="#aa0000"
                    android:endColor="#bb0000"
                    android:centerX="0.5"
                    android:angle="90"/>

            <padding android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="0dp"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <item>

        <shape android:shape="rectangle">


            <gradient
                    android:startColor="#33880000"
                    android:centerColor="#22cc0000"
                    android:endColor="#77aaaaaa"
                    android:centerX="0.7"
                    android:angle="90"/>

            <padding android:left="4dp" android:top="0dp" android:right="4dp" android:bottom="0dp"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>

</layer-list>