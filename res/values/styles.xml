<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="number_button">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">38sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@drawable/white_push_button</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">#222</item>
    </style>

    <style name="operator_button" parent="number_button">
        <item name="android:background">@drawable/gray_button_bg</item>
    </style>

    <style name="ce_button" parent="number_button">
        <item name="android:background">@drawable/red_button_bg</item>
    </style>

    <style name="equals_button" parent="number_button">
        <item name="android:background">@drawable/green_button_bg</item>
    </style>

</resources>